<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_chooser_height"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/activity_icon"
        android:layout_width="@dimen/item_chooser_height"
        android:layout_height="@dimen/item_chooser_height"
        android:clickable="false"
        android:contentDescription="@string/chooser_item_logo"
        android:padding="@dimen/item_chooser_icon_padding" />

    <TextView
        android:id="@+id/activity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/activity_icon"
        android:clickable="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>